" Eva Lott
" .vimrc
" vim config file

set encoding=utf-8
syntax on
filetype plugin on
filetype indent on
colorscheme customized
set autoindent
set number
set mouse=a
set clipboard=unnamedplus
set relativenumber
set cursorline
set nowrap
map <Tab> <C-W>w
set noshowmode

" swap file settigs
set nobackup
set noswapfile
set noundofile

" hotkeys
	" latex
	nnoremap <Leader>ll :!pdflatex %:p; cp *.pdf ..;
	"rm ../*.log ../*.aux;
	" ALE
	map <Leader>ld :ALEDetail

" airline settings
let g:airline_detect_whitespace=0
