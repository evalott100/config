let g:airline_symbols.columnr = ''

" ale settings
let g:ale_warn_about_trailing_whitespace = 0
let g:ale_warn_about_trailing_whitespace = 0
let g:airline#extensions#whitespace#mixed_indent_algo = 2
let g:ale_pattern_options = {
